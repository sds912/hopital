{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                {{form_row(form.prenom,{'attr':{'class': 'form-control form-control-sm'}})}}
            </div>
            <div class="form-group">
                {{form_row(form.nom,{'attr':{'class': 'form-control form-control-sm'}})}}
                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="form-group">
                {{form_row(form.birthday,{'attr':{'class': 'form-control form-control-sm'}})}}
                {{ form_errors(form.birthday, {'attr': {'class': 'text-danger'}}) }}
            </div>
            <div class="form-group">
                {{form_row(form.email,{'attr':{'class': 'form-control form-control-sm'}})}}
            </div>
            <div class="form-group">
                {{form_row(form.telephone,{'attr':{'class': 'form-control form-control-sm'}})}}
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                {{form_row(form.service,{ 'attr':{'class': 'form-control'}})}}
            </div>
            <div class="form-group">
                <label for="">Specialites</label>
                {{form_widget(form.specialites,{ 'attr':{'class': 'custom-select mr-sm-2'}})}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form)}}